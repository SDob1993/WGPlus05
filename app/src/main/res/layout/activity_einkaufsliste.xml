<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ur.mi.android.wgplus05.Einkaufsliste"
    android:id="@+id/activity_einkaufsliste_id"

    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:scaleType = "centerCrop"
        android:scaleY="1.3"
        android:src="@drawable/paper"
        android:alpha="0.7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Was brauchen wir noch?"
            android:textColor="@color/Black"
            android:textSize="30sp"
            android:layout_gravity="top|center_horizontal"
            android:textStyle="bold"
            android:id="@+id/wasbrauchenwirnoch"
            android:layout_marginTop="15dp"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/einkaufsliste"
            android:clickable="true"
            android:divider="@color/colorPrimary"
            android:longClickable="true"
            >

        </ListView>



    </LinearLayout>

    <ImageButton
        android:id="@+id/einkaufsliste_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/einkaufsliste_plus"
        android:layout_margin="10dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:background="?android:selectableItemBackground"/>


</FrameLayout>
